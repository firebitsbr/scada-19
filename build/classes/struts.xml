<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.i18n.encoding" value="UTF-8"></constant>
	<constant name="struts.devMode" value="true" />

	<package name="default" extends="struts-default">
	
		<interceptors>
		    <interceptor-stack name="myStack">
		        <interceptor-ref name="paramsPrepareParamsStack">
		            <param name="prepare.alwaysInvokePrepare">false</param>
		        </interceptor-ref>
		    </interceptor-stack>
		</interceptors>
 
		<default-interceptor-ref name="myStack"/>
			
		<action name="login" class="loginAction" method="login">
			<result>/WEB-INF/web/success.jsp</result>
		</action>
		
		<action name="funManage" class="funAction" method="funManage">
			<result >/WEB-INF/web/funManage.jsp</result>
		</action>
		
		<action name="saveFun" class="funAction" method="save">
			<interceptor-ref name="tokenSession"></interceptor-ref>
			<interceptor-ref name="paramsPrepareParamsStack"></interceptor-ref>
			
			<result name="invalid.token">/WEB-INF/web/double-submit.jsp</result>
			<result >/WEB-INF/web/funManage.jsp</result>
			<result name="input" >/WEB-INF/web/funManage.jsp</result>
		</action>

		<action name="editFun" class="funAction" method="editFun">
			<result >/WEB-INF/web/editFun.jsp</result>
		</action>		
		
		<action name="updateFun" class="funAction" method="update">
			<result >/WEB-INF/web/funManage.jsp</result>
			<result name="input" >/WEB-INF/web/editFun.jsp</result>
		</action>
		
		<action name="deleteFun" class="funAction" method="delete">
			<result >/WEB-INF/web/funManage.jsp</result>
			<result name="error">/WEB-INF/web/funManage.jsp</result>
		</action>
		
		<action name="variableManage" class="variableAction" method="variableManage">
			<result>/WEB-INF/web/variableManage.jsp</result>
		</action>
		
		<action name="saveVariable" class="variableAction" method="save">
			<interceptor-ref name="tokenSession"></interceptor-ref>
			<interceptor-ref name="paramsPrepareParamsStack"></interceptor-ref>
			
			<result name="invalid.token">/WEB-INF/web/double-submit.jsp</result>
			<result >/WEB-INF/web/variableManage.jsp</result>
			<result name="input" >/WEB-INF/web/variableManage.jsp</result>
		</action>
		
		<action name="editVariable" class="variableAction" method="edit">
			<result >/WEB-INF/web/editVariable.jsp</result>
		</action>		
		
		<action name="updateVariable" class="variableAction" method="update">
			<result >/WEB-INF/web/variableManage.jsp</result>
			<result name="input" >/WEB-INF/web/editVariable.jsp</result>
		</action>
		
		<action name="deleteVariable" class="variableAction" method="delete">
			<result >/WEB-INF/web/variableManage.jsp</result>
			<result name="error">/WEB-INF/web/variableManage.jsp</result>
		</action>
		
		<action name="realTimeInfo" class="funAction" method="allFun">
			<result >/WEB-INF/web/realTimeInfo.jsp</result>
		</action>	
				
	</package>
	
	<package name="ajaxPackage" extends="json-default">
		<action name="AjaxRealTimeInfo" class="com.sharpower.action.realTimeInfoAjaxAction" method="realTimeInfo" >
			<result type="json">
				<param name="noCache">true</param>
				<param name="contentType">text/html</param>
			</result>		
		</action>
	</package>

</struts>